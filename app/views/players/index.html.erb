<div class="page-header">
<%= link_to image_tag('rsz_dotawithme.png'), root_path %>
  <div class="align-right">  
<%- model_class = Player -%>
  <% if session.key? :current_user %>
    <%= button_to 'Sign Out', main_logout_path, :class => 'btn btn-primary' %>
  <% else %>
  <%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png"), '/auth/steam' %>
  <% end %>
  </div>
</div>
<div class="contentwrapper">
<div class="contentcolumn">
<table class="table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= link_to model_class.human_attribute_name(:Carry), "http://dotawithme-38012.usw1.actionbox.io/players?one=true" %></th>
      <th><%= link_to model_class.human_attribute_name(:Mid), "http://dotawithme-38012.usw1.actionbox.io/players?two=true" %></th>
      <th><%= link_to model_class.human_attribute_name(:Offlane), "http://dotawithme-38012.usw1.actionbox.io/players?three=true" %></th>
      <th><%= link_to model_class.human_attribute_name(:Support), "http://dotawithme-38012.usw1.actionbox.io/players?four=true" %></th>
      <th><%= link_to model_class.human_attribute_name(:Hard_Support), "http://dotawithme-38012.usw1.actionbox.io/players?five=true" %></th>
      <th><%= model_class.human_attribute_name(:language) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.username.titleize, "http://dotabuff.com/players/" + player.playerSteamID %></td>
        <td><% if player.one? %><%= image_tag('checkmark.png')  %><% else %> <%= image_tag('redx.png') %><% end %></td>
        <td><% if player.two? %><%= image_tag('checkmark.png')  %><% else %> <%= image_tag('redx.png') %><% end %></td>
        <td><% if player.three? %><%= image_tag('checkmark.png')  %><% else %> <%= image_tag('redx.png') %><% end %></td>
        <td><% if player.four? %><%= image_tag('checkmark.png')  %><% else %> <%= image_tag('redx.png') %><% end %></td>
        <td><% if player.five? %><%= image_tag('checkmark.png')  %><% else %> <%= image_tag('redx.png') %><% end %></td>
        <td><%= player.language.titleize %></td>
        <td><%= player.location.titleize %></td>
        <td>
        
          <% if session.key? :current_user and session[:current_user][:uid] == player.playerSteamID %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      player_path(player),
                      :title => "Remove your listing?",
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Remove your listing?')) },
                      :class => 'btn btn-mini btn-danger' %>   
          <% else %>  
          <%= link_to "Add Steam Friend", "steam://friends/add/" + player.playerSteamID, :class => 'btn btn-primary' %>
          <% end %>
                  
     <% end %>
          </td>
        </tr>    
  </tbody>
   
</table>

<div class="contentwrapper">  
  <%= link_to "New Listing",
            new_player_path,
            :class => 'btn btn-primary' %>
<div class="align-right1">
  <%= will_paginate @players %>
</div>
  </div>  
</div>
</div>

<% if false %>
<div class="sidebar">
    <%= yield :sidebar %>
      
</div> 
<% end %>

  
