<%= form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'entry-form' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rank, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rank, :class => 'entry-form' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'entry-form' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'entry-form' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :language, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :language, :class => 'entry-form' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :defaultMessage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :defaultMessage, :class => 'entry-form' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :leaderSteamID, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :leaderSteamID, :class => 'entry-form' %>
    </div>
  </div>
<br>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teams_path, :class => 'btn' %>
  </div>
<% end %>
