
<div class="span2"></div>
<div class="span8"><center>
<h1>Listing messages</h1>
 
<table class="table">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>From</th>
      <th>Note</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
    <% @players.each do |player| %>
    <% if ((session.key? :current_user) and (session[:current_user][:uid] == message.recipient or session[:current_user][:nickname] == message.from)) %>
      <tr> 
        <td><%= player.username %></td>
        <td><%= message.from %></td>
        <td><%= truncate(message.note, :length => 20, :seperator => ' ') %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
     </tr>
    <% end %>
<% end %>
  </tbody>
</table>
   

<br>
<br>


<%= link_to 'New Message', new_message_path %>
  
  </center></div>
<div class="span2"></div>