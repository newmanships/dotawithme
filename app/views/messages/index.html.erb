<%- model_class = Player -%>
<div class="span2"></div>
<div class="span8"><center>
<h1>Inbox</h1>
<table class="table">
  <thead>
    <tr>
      <th>Recipient</th>
      <th>From</th>
      <th>Note</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
    
    <% if ((session.key? :current_user) and (session[:current_user][:nickname] == message.recipient)) %>
      <tr> 
        <td><%= link_to message.recipient, player_path(@players.find_by(:username => message.recipient)) %></td>
        <td><%= link_to message.from, player_path(@players.find_by(:username => message.from)) %></td>
        <td><%= link_to truncate(message.note, :length => 20, :seperator => ' '), message %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
     
     </tr>
    <% end %>
<% end %>
  </tbody>
</table>
   

